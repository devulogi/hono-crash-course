{
  "name": "hono-crash-course",
  "version": "1.0.0",
  "description": "Hono.js Crash Course Project",
  "main": "src/main.js",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "dev": "tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "build": "tsc",
    "docs:generate": "tsx scripts/generate-docs.ts",
    "test": "echo 'No tests defined yet' && exit 0",
    "install:clean": "rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "check:deps": "pnpm audit && pnpm outdated"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.5",
    "bcrypt": "^6.0.0",
    "hono": "^4.0.0",
    "pg": "^8.16.3",
    "redis": "^5.10.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.6",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "hono",
    "web-framework",
    "javascript",
    "api"
  ],
  "author": "Your Name",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
